use strict;
use File::Glob;
use File::Find;


find({
    wanted => sub {
                    if (/^\..*testsuite\.sv$/   or
                        /^\..*testrunner\.sv$/
                    ) {
                      unlink;
                    }
                  }
  }, qw( . ));

unlink "run.log";
unlink "compile.log";
unlink ".svunit.f";
system("rm -rf work");
unlink "vsim.wlf";
unlink "ncsc.log";
system("rm -rf INCA_libs");
unlink "irun.key";
system("rm -rf csrc");
unlink "simv";
system("rm -rf simv.daidir");
